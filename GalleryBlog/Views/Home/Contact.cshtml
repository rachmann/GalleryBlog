<div class="col-sm-7">
    <div class="contact-title">
        <div class="title"><i class="icon-envelope-alt icon-2x pull-left"></i><h3>Send a message</h3></div>
    </div>

    <div id="contact-form">

        <form class="form-contact" action="@Url.Action("Contact","Home")" method="post">

            <div class="span3">
                <fieldset>
                    <div class="clearfix" style="margin-bottom: 4px;">
                        <div class="input">
                            <div class="input-prepend" style="float: left; width: 10%;">
                                <span class="add-on">Name:</span>
                            </div>
                            <div class="input-group" style="float: left; width: 90%;">
                                <input type="text" class="input" style="width: 100%;" value="" id="messageName" name="messageName" size="18" tabindex="1">
                            </div>
                        </div>
                    </div>

                    <div class="clearfix" style="margin-bottom: 4px;">
                        <div class="input" style="width: 100%">
                            <div class="input-prepend" style="float: left; width: 10%;">
                                <span class="add-on">Email:</span>
                            </div>
                            <div class="input-group" style="float: left; width: 90%">
                                <input type="text" class="input" style="width: 100%" value="" id="messageEmail" name="messageEmail" size="18" tabindex="2">
                            </div>
                        </div>
                    </div>

                </fieldset>
            </div>
            <div class="span4">
                <fieldset>
                    <div class="clearfix">
                        <div class="input" style="width: 100%">
                            <textarea rows="8" id="messageBody" style="width: 75%" name="messageBody" class="input" tabindex="3"></textarea>
                        </div>
                    </div>

                    <div class="actions">
                        <button class="btn btn-orange btn-red-pastel btn-steelblue btn-darkslategrey btn-large" type="submit" tabindex="4">Send message</button>
                    </div>
                </fieldset>
            </div>
        </form>

    </div>
    <div class="up">
        <a href="#" class="btn btn-large btn-orange btn-red-pastel btn-steelblue btn-darkslategrey">Back to top <i class="icon-chevron-up"></i></a>
    </div>

</div>



